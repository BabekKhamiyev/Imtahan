@using Cafe.DAL.Models
@model List<Chef>

<div class="card-body">
    <h4 class="card-title">Order Status</h4>
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                  
                    <th> # </th>
                    <th> image </th>
                    <th> Name </th>
                    <th> Field </th>
                    <th> Elave </th>

                </tr>
            </thead>
            <tbody>

                @if(Model is not null)
                {
                    foreach(var item in Model)
                    {
                <tr>
                   
                    <td> @item.Id </td>
                    <td> <img src="~/assets/UploadedImages/@item.ImgUrl"  /> </td>
                    <td> @item.Name </td>
                    <td> @item.Field </td>
                    <td>
                        <a asp-controller="Chef" asp-action="Info" asp-route-id="@item.Id"> Info  </a>
                        <a asp-controller="Chef" asp-action="Delete" asp-route-id="@item.Id"> Delete  </a>
                        <a asp-controller="Chef" asp-action="Update" asp-route-id="@item.Id"> Update  </a>

                    </td>
                </tr>
                    }
                }

                <a asp-controller="Chef" asp-action="Create"> Create</a>

            </tbody>
        </table>
    </div>
</div>